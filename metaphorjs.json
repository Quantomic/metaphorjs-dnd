{
  "version": "0.1",
  "description": "MetaphorJs.Draggable and MetaphorJs.Droppable",

  "push": [
    "github"
  ],

  "build": {
    "standalone": {
      "wrap": true,
      "global": true,
      "auto": true,
      "target": "dist/metaphorjs.dnd.js",
      "files": [
        "metaphorjs/src/MetaphorJs.js",
        [
          "src/**",
          {
            "as": "*"
          }
        ],
        [
          "metaphorjs/src/func/dom/onReady.js",
          {
            "as": "onReady"
          }
        ]
      ],
      "expose": [
        "Draggable",
        "Droppable",
        "onReady"
      ]
    }
  }
}